<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="20dip"
        android:layout_height="40dip"
        android:id="@+id/treatmentID"
        android:layout_weight=".2"
        android:visibility="gone"/>
    <TextView
        android:layout_width="20dip"
        android:layout_height="40dip"
        android:id="@+id/treatmentObject"
        android:layout_weight=".2"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/treatmentAmount"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:textSize="12sp"
            android:text="1.0u"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/insulin_treatment_round"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">
            <TextView
                android:id="@+id/treatmentType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="Bolus"
                android:gravity="bottom"/>

            <TextView
                android:id="@+id/treatmentNoteLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:height="20dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="Correction"
                android:gravity="bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:textSize="14sp"
                android:id="@+id/treatmentTimestamp"
                android:text="00:00"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            >
            <TextView
                android:id="@+id/treatmentAPS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:layout_weight="1"
                android:text="From APS App X"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/treatmentResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:layout_weight="1"
                android:text="Result"
                android:visibility="gone"
                android:gravity="top"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/treatmentResultIcon"
                android:layout_marginRight="16dp"
                android:layout_gravity="top"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>