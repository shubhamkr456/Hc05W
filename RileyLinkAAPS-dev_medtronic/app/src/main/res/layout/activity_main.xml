<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/mainActivity">

        <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/mainActivityToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bluet"
                android:minHeight="?attr/actionBarSize">


            </android.support.v7.widget.Toolbar>



        </android.support.design.widget.AppBarLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"

            android:layout_marginTop="?attr/actionBarSize">

            <LinearLayout
                android:id="@+id/main_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glucose Level at"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="60dp"
                        android:textColor="@color/bluet"
                        android:id="@+id/timetv"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_logview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="132"
                        android:textAlignment="center"
                        android:textColor="#509612"
                        android:textColorHint="#509612"
                        android:textSize="70dp"
                        android:textStyle="bold"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="50dp"/>

                    <TextView
                        android:id="@+id/main_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="@dimen/appbar_padding"
                        android:text="mg/dL"
                        android:textAlignment="center"
                        android:textColor="@color/bluet"
                        android:textColorHint="#509612"
                        android:textSize="15dp"
                        android:textStyle="italic" />



                </LinearLayout>



                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#D9DBD9"
                android:layout_marginTop="0dp"></LinearLayout>



            <LinearLayout
                android:id="@+id/main_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.0"
                android:background="#FFFFFF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/textLabelActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Activity:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/bluet" />

                        <Space
                            android:layout_width="20px"
                            android:layout_height="20px" />

                        <ProgressBar
                            android:id="@+id/progressBarCommandActivity"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_width="20px"
                            android:layout_height="20px" />

                        <TextView
                            android:id="@+id/textViewActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connecting to Service"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/bluet" />

                        <Space
                            android:layout_width="20px"
                            android:layout_height="20px" />

                        <ProgressBar
                            android:id="@+id/progressBarSpinny"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:indeterminateBehavior="cycle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/textViewLabelRileyLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="RileyLink: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/bluet" />

                        <Space
                            android:layout_width="20px"
                            android:layout_height="20px" />

                        <TextView
                            android:id="@+id/textViewFieldRileyLink"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="(not found)"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/bluet" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/textViewLabelPump"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pump: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/bluet" />

                        <Space
                            android:layout_width="20px"
                            android:layout_height="20px" />

                        <TextView
                            android:id="@+id/textViewFieldPump"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(not found)"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/bluet" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#D9DBD9"></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Connected to CGM"
                        android:textColor="#509612"
                        android:textSize="20dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#D9DBD9"></LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="20dp"
                    >

                    <Button
                        android:id="@+id/set"
                        android:layout_width="69dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/pump"
                        android:onClick="showPopup" />

                    <Button
                        android:id="@+id/pumpconnect"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/ic_autorenew_grey600_36dp"
                        android:onClick="refresh"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insulin"
                            android:layout_marginTop="0dp"
                            android:textColor="@color/bluet"
                            android:id="@+id/timetvi"
                            android:layout_marginLeft="140dp"
                            android:textSize="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/main_logviewi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textAlignment="center"
                            android:textColor="@color/bluet"
                            android:textColorHint="#509612"
                            android:textSize="60dp"
                            android:layout_marginLeft="160dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/main_uniti"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="U"
                            android:textAlignment="center"
                            android:textColor="@color/bluet"
                            android:textColorHint="#509612"
                            android:textSize="15dp"
                            android:textStyle="italic" />



                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/graph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@xml/button_border"
                    android:text="Graph" />

                <Button
                    android:id="@+id/scan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@xml/button_border"
                    android:onClick="scanbt"
                    android:text="Scan" />

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </android.support.constraint.ConstraintLayout>


    </android.support.design.widget.CoordinatorLayout>


    <!-- Side navigation drawer UI -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/left_drawer"
        android:layout_gravity="start"
        android:padding="16dp"
        android:background="@color/primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="APS App"
                android:textSize="14sp"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/apsApp_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/exit_to_app" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/apsApp_status"
                    android:text="-"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/icons" />
        </LinearLayout>

        <ListView
            android:id="@+id/navList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
